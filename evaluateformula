import java.util.Scanner;
class evaluateformula {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int a = scn.nextInt();
        int b = scn.nextInt();
        int c = scn.nextInt();
        int d = scn.nextInt();
        // Compute Result and Prin
        int f = ((a+b)/c)+d;
        System.out.println(f);
    }
}