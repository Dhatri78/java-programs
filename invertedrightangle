import java.util.*;
public class invertedrightangle{
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        // Write Code Here
        for(int i = n;i> 0;i--){
            for(int j=0;j<i;j++){
                System.out.print("*" + " ");
            }
            System.out.println();
        }
    }
}